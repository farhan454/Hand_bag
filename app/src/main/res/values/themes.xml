<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Hand_bag" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:windowDisablePreview">true</item>


        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/design_primary</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_out_up</item>
    </style>
    <style name="AppDialogTheme" parent="Theme.AppCompat.Dialog">
        <!-- Define color properties as desired -->
        <!-- Define window properties as desired -->
        <item name="android:windowNoTitle">false</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>




    <style name="mytheme" parent="android:style/Theme.Translucent">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="SpinnerTextViewItem" parent="@android:style/Widget.TextView">
        <item name="android:textSize">13dp</item>
        <item name="fontFamily">@font/dinnextltarabicmedium</item>
    </style>



    <style name="add_coupon_edittext_style">
        <item name="android:textColorHint">@color/hint_color</item>
        <item name="android:backgroundTint">@color/edit_line</item>
        <item name="android:layout_marginTop">@dimen/_dp5</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp40</item>
        <item name="android:textSize">@dimen/sp16</item>
        <item name="fontFamily">@font/dinextltarabicregular</item>
        <item name="android:textColor">@color/primary_text</item>

    </style>
    <style name="add_coupon_editText_style">
        <item name="android:textColorHint">@color/hint_color</item>
        <item name="android:backgroundTint">@color/edit_line</item>
        <item name="android:layout_marginTop">@dimen/_dp5</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp40</item>
        <item name="android:textSize">@dimen/sp16</item>
        <item name="fontFamily">@font/dinextltarabicregular</item>
        <item name="android:textColor">@color/primary_text</item>

    </style>

    <style name="add_coupon_text_style">
        <item name="android:textColor">@color/main_color</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/sp12</item>
        <item name="fontFamily">@font/dinnextltarabicmedium</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/normal_color</item>
        <item name="colorControlActivated">@color/yellow</item>
    </style>

    <style name="checkboxStyle" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/normal_color</item>
        <item name="colorControlActivated">@color/yellow</item>
    </style>

    <style name="menu_text_style">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/sp16</item>
        <item name="fontFamily">@font/dinnextltarabicbold</item>
        <item name="android:layout_marginStart">@dimen/dp26</item>
        <item name="android:layout_marginTop">@dimen/dp16</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="my_coupon_txt_style">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/sp16</item>
        <item name="fontFamily">@font/dinnextltarabicbold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="cd_txt_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">@dimen/_dp3</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">@dimen/sp12</item>
        <item name="fontFamily">@font/dinnextltarabicmedium</item>
    </style>

    <style name="cd_icon_style">
        <item name="android:layout_width">@dimen/dp34</item>
        <item name="android:layout_height">@dimen/dp34</item>
        <item name="android:layout_gravity">center</item>

    </style>

    <style name="error_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/field_error</item>
        <item name="android:textSize">@dimen/sp12</item>
        <item name="fontFamily">@font/dinnextltarabicmedium</item>
        <item name="android:visibility">invisible</item>

    </style>

    <style name="bold_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">@dimen/sp16</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/dinnextltarabicbold</item>
    </style>

    <style name="Widget.AppTheme.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <dimen name="_dp3">-3dp</dimen>
</resources>