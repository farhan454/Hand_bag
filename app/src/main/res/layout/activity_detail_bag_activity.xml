<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:background="@drawable/detail_bg"
    android:layout_width="match_parent"
    android:id="@+id/rl_main"
    android:orientation="vertical"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
        <RelativeLayout
            android:id="@+id/top_Rl"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_margin="15dp"
                android:layout_width="30dp"
                android:tint="@color/white"
                android:layout_height="30dp"
                android:src="@drawable/ic_baseline_arrow_back_24"/>
            <ImageView
                android:id="@+id/shoping"
                android:layout_margin="15dp"
                android:layout_alignParentRight="true"
                android:layout_width="30dp"
                android:tint="@color/white"
                android:layout_height="30dp"
                android:src="@drawable/ic_baseline_shopping_cart_checkout_24"/>
            <ImageView
                android:layout_marginTop="15dp"
                android:layout_toStartOf="@+id/shoping"
                android:layout_width="30dp"
                android:tint="@color/white"
                android:layout_height="30dp"
                android:src="@drawable/ic_baseline_search_24"/>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/women_ll"
            android:layout_below="@id/top_Rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Automatic Hand Bag"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_marginStart="15dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Office Code"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_marginStart="15dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/price"
            android:layout_marginTop="130dp"
            android:layout_below="@id/women_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="price"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_marginStart="15dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$223"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_marginStart="15dp"/>
        </LinearLayout>
    <ImageView
        android:id="@+id/img"
        android:layout_marginStart="15dp"
        android:layout_width="170dp"
        android:layout_height="200dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="70sp"
        android:layout_marginTop="200dp"
        android:src="@drawable/women_bag_1"/>
    <RelativeLayout
        android:id="@+id/size"
        android:layout_below="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/color"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="color"
                android:textSize="20sp"
                android:layout_marginStart="30dp"/>
            <LinearLayout
                android:layout_marginStart="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RadioButton
                    android:id="@+id/radio_btn_blue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="#0000FF"
                    android:textColor="@color/black"
                    />

                <RadioButton
                    android:id="@+id/radio_btn_purple"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="#800080"
                    android:textColor="@color/black"
                    android:layout_marginStart="5dp" />
                <RadioButton
                    android:id="@+id/radio_btn_red"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="#FF0000"
                    android:textColor="@color/black"
                    android:layout_marginStart="5dp"
                    />
            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_toEndOf="@+id/color"
            android:layout_marginStart="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="size"
                android:textSize="20sp"
                android:layout_marginStart="30dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12cm"
                android:textSize="20sp"
                android:layout_marginStart="30dp"/>
        </LinearLayout>

    </RelativeLayout>
    <LinearLayout
        android:id="@+id/des"
        android:layout_below="@+id/size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" by the readable content of a page when looking at its layout. The point of using Lorem Ipsum is that it has a more-or-less normal distribution of letters, as opposed to using 'Content here, content here', making it look like readable English. Many desktop publishing packages and web page editors now use Lorem Ipsum as their default model text, and a search for 'lorem ipsum' will unc"/>

    </LinearLayout>
    <RelativeLayout
        android:id="@+id/circle"
        android:layout_below="@+id/des"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_marginBottom="15dp"
        android:layout_height="50dp">
   <TextView
       android:id="@+id/negative"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="--"
       android:gravity="center"
       android:elevation="10dp"
       android:textSize="25dp"
       android:background="@drawable/circle_bg"
       android:layout_marginStart="20sp"/>
        <TextView
            android:id="@+id/num"
            android:layout_toEndOf="@+id/negative"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="01"
            android:gravity="center"
            android:elevation="5dp"
            android:textSize="25sp"
            android:layout_marginStart="20sp"/>
        <TextView
            android:id="@+id/plus"
            android:layout_toEndOf="@+id/num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:gravity="center"
            android:elevation="5dp"
            android:textSize="25sp"
            android:background="@drawable/circle_bg"
            android:layout_marginStart="20sp"/>
    </RelativeLayout>
<RelativeLayout
    android:layout_marginTop="5dp"
    android:layout_marginStart="50dp"
    android:layout_below="@+id/circle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/imgshop"
        android:layout_marginTop="15dp"
        android:layout_width="60dp"
        android:background="@drawable/cart_bg"
        android:layout_height="60dp">
        <ImageView
            android:layout_gravity="center"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_baseline_shopping_cart_checkout_24"/>
    </LinearLayout>

<Button
    android:layout_marginTop="15dp"
    android:layout_marginStart="10dp"
    android:id="@+id/buy_now"
    android:layout_toEndOf="@+id/imgshop"
    android:layout_width="200dp"
    android:layout_height="55dp"
    android:background="@drawable/btn_bg_red"
    android:text="Buy Now"
    android:textColor="@color/white"/>

</RelativeLayout>
    </RelativeLayout>
