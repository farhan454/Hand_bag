<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="@dimen/_dp5"
    android:layout_marginTop="@dimen/dp20"
    android:layout_marginEnd="@dimen/_dp5"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/main_linear_view">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/dp16"
        android:layout_marginEnd="@dimen/dp16">

        <LinearLayout
            android:layout_marginTop="@dimen/dp12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:textColor="@color/primary_text"
                android:layout_marginEnd="@dimen/dp16"
                android:id="@+id/question_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/dinnextltarabicbold"
                android:text="How do I know About latest Upldat?"
                android:textSize="16sp">
            </TextView>

            <ImageView
                android:id="@+id/dd_img"
                android:layout_width="@dimen/dp25"
                android:layout_height="@dimen/dp25"
                android:layout_gravity="center"
                android:src="@drawable/down_arrow">
            </ImageView>
        </LinearLayout>
         <RelativeLayout
             android:id="@+id/rl_color"
             android:visibility="gone"
             android:layout_width="match_parent"
             android:gravity="center"
             android:layout_height="@dimen/dp60">

             <androidx.cardview.widget.CardView
                 android:id="@+id/card_1"
                 android:layout_width="@dimen/dp50"
                 android:layout_height="@dimen/dp50"
                 app:cardBackgroundColor="@color/new_purple"
                 app:cardCornerRadius="@dimen/dp5" />
             <androidx.cardview.widget.CardView
                 android:id="@+id/card_2"
                 android:layout_toRightOf="@+id/card_1"
                 android:layout_width="@dimen/dp50"
                 android:layout_marginStart="@dimen/dp15"
                 app:cardBackgroundColor="@color/new_blue"
                 android:layout_height="@dimen/dp50"
                 app:cardCornerRadius="@dimen/dp5"/>
             <androidx.cardview.widget.CardView
                 android:id="@+id/card_3"
                 android:layout_toRightOf="@+id/card_2"
                 android:layout_width="@dimen/dp50"
                 android:layout_marginStart="@dimen/dp15"
                 android:layout_height="@dimen/dp50"
                 app:cardBackgroundColor="@color/black"
                 app:cardCornerRadius="@dimen/dp5"/>

             <androidx.cardview.widget.CardView
                 android:id="@+id/card_4"
                 android:layout_width="@dimen/dp50"
                 android:layout_height="@dimen/dp50"
                 app:cardBackgroundColor="@color/new_green"
                 android:layout_marginStart="@dimen/dp15"
                 android:layout_toRightOf="@+id/card_3"
                 app:cardCornerRadius="@dimen/dp5" />




         </RelativeLayout>
        <TextView
            android:visibility="gone"
            android:id="@+id/answer_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dinextltarabicregular"
            android:textColor="@color/secondary_text"
            android:text="All codes are effective,  read the code details.All codes are effective,  read the code details.All codes are effective,  read the code details.All codes are effective,  read the code details."
            android:textSize="16sp">
        </TextView>

        <View
            android:id="@+id/view_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/dp16"
            android:background="@color/edit_line"
            />
    </LinearLayout>
</LinearLayout>