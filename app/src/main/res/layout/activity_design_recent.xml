<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/design_bg"
    tools:context=".DesignScreen.DesignRecent">
    <RelativeLayout
        android:id="@+id/top_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/ic_baseline_arrow_back_24"
            app:tint="@color/design_primary" />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="15dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="15dp"
            android:src="@drawable/ic_baseline_search_24"
            app:tint="@color/design_primary" />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/top_relative_layout2"
        android:layout_below="@+id/top_relative_layout"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="50dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:text="Recent Trtansition"
            android:textColor="@color/design_primary"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"
            android:text="See All"
            android:textColor="@color/design_primary"
            android:textSize="15sp"
            android:textStyle="bold" />


    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/top_3"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="60dp"
        android:layout_below="@+id/top_relative_layout2">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginStart="@dimen/dp16"
            android:layout_marginTop="5dp"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/rl_1"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:background="@drawable/item_view">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="All"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="15sp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/rl_2"
                android:layout_toRightOf="@+id/rl_1"
                android:layout_width="70dp"
                android:layout_marginStart="15dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:background="@drawable/unselect_item">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="sent"
                    android:textColor="@color/design_primary"
                    android:gravity="center"
                    android:textSize="15sp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/rl_3"
                android:layout_toRightOf="@+id/rl_2"
                android:layout_width="70dp"
                android:layout_marginStart="15dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:background="@drawable/unselect_item">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Receive"
                    android:textColor="@color/design_primary"
                    android:gravity="center"
                    android:textSize="15sp"/>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/top_4"
        android:layout_below="@+id/top_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Today"
            android:layout_marginStart="15dp"
            android:textColor="@color/design_primary"
            android:gravity="center"
            android:textSize="25sp"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/top5"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/top_4"
        android:layout_marginStart="15sp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="15sp"
        android:background="@drawable/edt_bg_bg"
        android:elevation="2dp">

        <ImageView
            android:id="@+id/img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="15sp"
            android:src="@drawable/ic_up" />

        <TextView
            android:id="@+id/txt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:layout_marginTop="15sp"
            android:layout_toEndOf="@+id/img"
            android:text="Sent"
            android:textColor="@color/design_primary"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_name"
            android:layout_marginStart="10sp"
            android:layout_marginTop="2sp"
            android:layout_toEndOf="@+id/img"
            android:text="12 feb 2022"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/dollar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20sp"
            android:layout_marginEnd="15sp"
            android:text="$ 2223"
            android:textColor="@color/design_primary"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dollar"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5sp"
            android:layout_marginEnd="15sp"
            android:text="Received"
            android:textColor="@color/teal_700"
            android:textSize="12sp"
            android:textStyle="bold"
            android:visibility="gone" />
    </RelativeLayout>
 <RelativeLayout
     android:id="@+id/top6"
     android:layout_below="@+id/top5"
     android:layout_marginTop="20dp"
     android:layout_width="match_parent"
     android:layout_height="300dp">

     <ImageView
         android:id="@+id/img1"
         android:layout_width="120dp"
         android:layout_height="120dp"
         android:layout_centerInParent="true"
         android:layout_marginStart="15sp"
         android:src="@drawable/avatar4" />
     <ImageView
         android:id="@+id/img2"
         android:layout_width="80dp"
         android:layout_height="80dp"
         android:layout_centerVertical="true"
         android:layout_marginStart="15sp"
         android:src="@drawable/avatar5" />
     <ImageView
         android:id="@+id/img3"
         android:layout_width="80dp"
         android:layout_height="80dp"
         android:layout_centerHorizontal="true"
         android:layout_marginStart="15sp"
         android:src="@drawable/avatar3" />
     <ImageView
         android:id="@+id/img4"
         android:layout_width="80dp"
         android:layout_height="80dp"
         android:layout_below="@+id/img1"
         android:layout_centerHorizontal="true"
         android:layout_marginStart="15sp"
         android:src="@drawable/avatar2" />
     <ImageView
         android:id="@+id/img"
         android:layout_width="80dp"
         android:layout_height="80dp"
         android:layout_alignParentEnd="true"
         android:layout_centerVertical="true"
         android:layout_marginEnd="15sp"
         android:src="@drawable/avatar1" />
 </RelativeLayout>
    <RelativeLayout
        android:layout_below="@+id/top6"
        android:id="@+id/btn"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:elevation="5dp"
        android:background="@drawable/btn_bg"
        android:layout_height="60dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="Sign In"
            android:textAlignment="center"
            android:textColor="@color/white" />
    </RelativeLayout>
</RelativeLayout>