<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/design_bg"
    android:layout_height="match_parent"
    tools:context=".DesignScreen.DesignSignIn">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circle"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:elevation="0dp"
        android:src="@drawable/logo" />
    <LinearLayout
        android:id="@+id/txt_sign"
        android:layout_below="@+id/circle"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/txt_sign"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="@color/design_bg"
        android:layout_marginTop="70dp"
        android:layout_height="match_parent">
        <LinearLayout
            android:background="@drawable/edt_bg"
            android:layout_width="match_parent"
            android:layout_marginStart="15dp"
            android:elevation="2dp"
            android:orientation="vertical"
            android:layout_marginEnd="15dp"
            android:layout_height="80dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:layout_marginStart="26dp"
                android:textColor="@color/black"
                android:textSize="15sp"/>

            <EditText
                android:id="@+id/edt_user_name_signup"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="15dp"
                android:drawableTint="@color/design_primary"
                android:background="@null"
                android:layout_marginEnd="15dp"
                android:drawableStart="@drawable/ic_baseline_person_24"
                android:drawablePadding="5dp"
                android:hint="user name"
                android:textColor="@color/black"
                android:inputType="text"
                android:paddingStart="10dp"
                android:singleLine="true" />

        </LinearLayout>
        <LinearLayout
            android:background="@drawable/edt_bg"
            android:layout_width="match_parent"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:elevation="2dp"
            android:orientation="vertical"
            android:layout_marginEnd="15dp"
            android:layout_height="80dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:layout_marginStart="25dp"
                android:textColor="@color/black"
                android:textSize="15sp"/>

            <EditText
                android:id="@+id/edt_email_signup"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="15dp"
                android:drawableTint="@color/design_primary"
                android:background="@null"
                android:layout_marginEnd="15dp"
                android:drawableStart="@drawable/ic_baseline_lock_24"
                android:drawablePadding="5dp"
                android:hint="213435"
                android:textColor="@color/black"
                android:inputType="textPassword"
                android:paddingStart="10dp"
                android:singleLine="true" />

        </LinearLayout>
            <RelativeLayout
            android:id="@+id/btn"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:layout_marginStart="35dp"
            android:layout_marginEnd="35dp"
            android:elevation="5dp"
            android:background="@drawable/btn_bg"
            android:layout_height="60dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="Sign In"
                    android:textAlignment="center"
                    android:textColor="@color/white" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="30dp"
                android:text="Sign Up"
                android:textColor="@color/design_primary"
                android:textSize="15sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Forget Password"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="30dp"
                android:textSize="15sp"
                android:textColor="@color/design_primary"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>