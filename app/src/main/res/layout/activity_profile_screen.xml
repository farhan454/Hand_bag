<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:id="@+id/relatives_ll"
    tools:context=".ProfileScreen">
    <RelativeLayout
        android:id="@+id/top_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:tint="#0000FF"
            android:src="@drawable/ic_baseline_arrow_back_24"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:textStyle="bold"
            android:textColor="#0000FF"
            android:textSize="20sp"
            android:layout_marginTop="16dp"
            android:layout_centerInParent="true"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="15dp"
            android:layout_alignParentEnd="true"
            android:tint="#0000FF"
            android:src="@drawable/ic_edit"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/profile_layout"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/top_relative_layout"
        android:layout_marginStart="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile"
            android:src="@drawable/profile_logo"
            android:layout_width="90dp"
            android:layout_height="90dp"/>
        <TextView
            android:layout_toRightOf="@+id/profile"
            android:id="@+id/txt_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:text="M Makhdood"
            android:textStyle="bold"
            android:textColor="#0000FF"
            android:textSize="20sp"
            android:layout_marginStart="10dp"/>
        <TextView
            android:layout_toRightOf="@+id/profile"
            android:layout_below="@+id/txt_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="0dp"
            android:text="M Makhdood"
            android:textStyle="normal"
            android:textColor="#C1C6CC"
            android:textSize="12sp"
            android:layout_marginStart="10dp"/>
    </RelativeLayout>
   <LinearLayout
       android:id="@+id/info_profile"
       android:layout_below="@id/profile_layout"
       android:layout_width="match_parent"
       android:orientation="vertical"
       android:layout_marginStart="10dp"
       android:layout_marginTop="20dp"
       android:layout_height="wrap_content">
       <LinearLayout
           android:orientation="horizontal"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <ImageView
               android:layout_width="20dp"
               android:layout_height="20dp"
               android:layout_marginStart="15dp"
               android:tint="#0000FF"
               android:src="@drawable/ic_email"/>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="16sp"
               android:layout_marginLeft="5dp"
               android:textColor="@color/new_blue"
               android:text="svfddd@gmail.com"/>
       </LinearLayout>
       <LinearLayout
           android:layout_marginTop="10dp"
           android:orientation="horizontal"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <ImageView
               android:layout_width="20dp"
               android:layout_height="20dp"
               android:tint="@color/new_blue"
               android:layout_marginStart="15dp"
               android:src="@drawable/ic_phone"/>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="15sp"
               android:textColor="@color/new_blue"
               android:layout_marginStart="5dp"
               android:text="03049446312"/>
       </LinearLayout>
   </LinearLayout>
    <LinearLayout
        android:id="@+id/card_layout"
        android:layout_marginTop="30dp"
        android:layout_below="@id/info_profile"
        android:layout_width="match_parent"
        android:weightSum="2"
        android:layout_height="120dp">
        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="#F5F5F5"
            android:layout_weight="1"
            app:cardElevation="3dp"
            android:layout_height="100dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$33434"
                    android:textStyle="bold"
                    android:textColor="#0000FF"
                    android:textSize="18sp"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Weilet"
                    android:textStyle="bold"
                    android:textColor="#C1C6CC"
                    android:textSize="18sp"
                    android:layout_gravity="center" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            app:cardElevation="3dp"
            app:cardBackgroundColor="#F5F5F5"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:layout_height="100dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12"
                    android:textStyle="bold"
                    android:textColor="#0000FF"
                    android:textSize="18sp"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Orders"
                    android:textStyle="bold"
                    android:textColor="#C1C6CC"
                    android:textSize="18sp"
                    android:layout_gravity="center" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/all_info"
        android:layout_below="@id/card_layout"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="15dp"
                android:tint="#0000FF"
                android:src="@drawable/ic_baseline_favorite_border_24"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginStart="15dp"
                android:textColor="@color/new_blue"
                android:text="Your Favourite"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:tint="@color/new_blue"
                android:layout_marginStart="15dp"
                android:src="@drawable/ic_baseline_payment_24"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/new_blue"
                android:layout_marginStart="15dp"
                android:text="Paymnets"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:layout_marginStart="15dp"
                android:src="@drawable/ic_baseline_people_outline_24"
                android:tint="@color/new_blue" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/new_blue"
                android:layout_marginStart="15dp"
                android:text="Tell Your Frends"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:layout_marginStart="15dp"
                android:src="@drawable/ic_baseline_sell_24"
                android:tint="@color/new_blue" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/new_blue"
                android:layout_marginStart="15dp"
                android:text="Promotions"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/setting_btn"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="15dp"
                android:src="@drawable/ic_baseline_settings_24"
                app:tint="@color/new_blue" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/new_blue"
                android:layout_marginStart="15dp"
                android:text="Seetings"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/logout_btn"
            android:layout_below="@id/setting_btn"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginStart="0dp"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="15dp"
                    android:src="@drawable/ic_baseline_power_settings_new_24"
                    app:tint="@color/blue" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:layout_marginStart="15dp"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/blue"
                    android:text="Log out"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>